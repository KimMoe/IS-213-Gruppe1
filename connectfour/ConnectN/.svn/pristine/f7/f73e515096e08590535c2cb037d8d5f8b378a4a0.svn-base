package is207.connectn.game.strategy;

import is207.connectn.game.Strategy;
import java.util.Random;



/**
 *
 * @author evenal
 */
public class RandomStrategy extends Strategy {

    private int[] stackHeight = new int[cols];
    Random rand = new Random();


    @Override
    public Integer call() {
        if (lastMove>=0)
            stackHeight[lastMove]++;
        int move;
        do {
            move = rand.nextInt(cols);
        }
        while (stackHeight[move]==rows);
        return move;
    }
}
