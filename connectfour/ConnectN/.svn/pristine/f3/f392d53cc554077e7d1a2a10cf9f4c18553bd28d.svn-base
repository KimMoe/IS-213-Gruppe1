package is207.connectn.handin.oddvar;

import is207.connectn.strategy.Strategy;
import java.util.Random;



/**
 *
 * @author Oddvar Tengesdal
 */
public class OT extends Strategy
{

    private static Random rand = new Random();

    @Override
    public Integer call() {
        int n = validMoves.size();
        System.out.print(n + " available moves:");
        for (int m : validMoves)
            System.out.print(" " + m);
        System.out.println();

        // Setter hvilken linje den skal begynne ï¿½ sette brikker i.
        // int i = validMoves.get(n);
        int i = rand.nextInt(n);

        for (int m : validMoves)
            if (m == 2)
                i = 2;
            else if (m == 3)
                i = 3;

        selectedMove = validMoves.get(i);
        System.out.println("Returning move " + i + ": " + selectedMove);
        return selectedMove;
    }
}
