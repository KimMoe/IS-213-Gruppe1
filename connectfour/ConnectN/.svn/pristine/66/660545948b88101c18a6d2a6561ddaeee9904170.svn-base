package is207.connectn.handin.thananchai;

import is207.connectn.strategy.Strategy;



/**
 *
 * @author Thananchai
 */
public class Thananchai extends Strategy
{
    @Override
    public Integer call() {
        int n = validMoves.size();
        System.out.print(n + " available moves:");
        for (int m : validMoves)
            System.out.print(" " + m);
        System.out.println();
        selectedMove = validMoves.get(bestMove());
        System.out.println("Returning move " + bestMove() + ": " + selectedMove);
        return selectedMove;
    }

    private int bestMove() {
        //find best move
        int move = getAvailableMoves()[1];
        return move;
    }

    private int[] getAvailableMoves() {
        //hent ledige plasser
        int[] i = {0, 1, 2};
        return i;
    }
}
