package is207.connectn.handin.others;

import is207.connectn.strategy.Strategy;
import java.util.Random;



/**
 *
 * @author tor
 */
public class Tulling extends Strategy
{

    private static Random rand = new Random();

    @Override
    public Integer call() {
        int n = validMoves.size();
        System.out.print(n + " available moves:");
        for (int m : validMoves)
            System.out.print(" " + m);
        System.out.println();
        int i = rand.nextInt(n);

        for (int m : validMoves)
            if (m == 3)
                i = 3;
            else if (m == 1)
                i = 1;

        selectedMove = validMoves.get(i);
        System.out.println("Returning move " + i + ": " + selectedMove);
        return selectedMove;
    }
}
