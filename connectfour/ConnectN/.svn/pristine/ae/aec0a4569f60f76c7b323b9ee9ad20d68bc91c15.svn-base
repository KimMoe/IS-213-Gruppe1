package is207.connectn.game;

import java.util.concurrent.TimeUnit;



/**
 * Game configuration parameters
 *
 * @author evenal
 */
public final class GameParams
{

    // default values
    public static final int DEFAULT_ROWS = 6;
    public static final int DEFAULT_COLS = 7;
    public static final int DEFAULT_CONN_LEN = 4;
    public static final int DEFAULT_TIME_LIMIT = 500;
    public static final TimeUnit DEFAULT_TIME_UNIT = TimeUnit.MILLISECONDS;

    private static final GameParams instance;

    static {
        instance = new GameParams();
    }

    private final int cols;
    private final int rows;
    private final int connLen;
    private final int timeLimit;
    private final TimeUnit timeUnit;

    private GameParams() {
        cols = DEFAULT_COLS;
        rows = DEFAULT_ROWS;
        connLen = DEFAULT_CONN_LEN;
        timeLimit = DEFAULT_TIME_LIMIT;
        timeUnit = DEFAULT_TIME_UNIT;
    }


    public static GameParams getInstance() {
        return instance;
    }

    public int getTimeLimit() {
        return timeLimit;
    }

    public TimeUnit getTimeUnit() {
        return timeUnit;
    }

    public int getCols() {
        return cols;
    }

    public int getRows() {
        return rows;
    }

    public int getConnLen() {
        return connLen;
    }
}
