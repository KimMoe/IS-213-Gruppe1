package is207.connectn.game.strategy;

import is207.connectn.game.Strategy;
import javax.swing.JOptionPane;



/**
 *
 * @author evenal
 */
public class HumanStrategy extends Strategy {

    @Override
    public Integer call() {
        StringBuilder buf = new StringBuilder("Enter move");
        buf.append("(Valid moves are: ");
        for (int c : validMoves) {
            buf.append(c);
            buf.append(" ");
        }
        buf.append(")");

        do {
            String input = JOptionPane.showInputDialog(null, buf.toString());
            try {
                int move = Integer.decode(input);
                System.out.println("User selected " + move);
                return move;
            }
            catch (NumberFormatException nfe) {
                //ignore
            }
        }
        while (true);
    }
}
