package is207.connectn.handin.glenn;

import java.io.BufferedWriter;
import java.io.FileWriter;
import java.io.PrintWriter;
import java.util.HashSet;



public class Wisdom implements Runnable
{

    private int player;
    private String move;
    private HashSet<String> list;

    public Wisdom(int player, String move, HashSet<String> list) {
        // TODO Auto-generated constructor stub
        this.player = player;
        this.move = move;
        this.list = list;
    }

    @Override
    public void run() {
        // TODO Auto-generated method stub
        if (!list.contains(move)) {
            String datafile = player == 1 ? "GGL1.dat" : "GGL2.dat";
            try (PrintWriter out = new PrintWriter(new BufferedWriter(new FileWriter(datafile, true)))) {
                out.println(move);
            }
            catch (Exception e) {
            } // Vil bare gå videre uten å gjøre noe
        }
    }

}
